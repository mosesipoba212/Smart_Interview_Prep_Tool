# Environment Configuration
# Copy this file to .env and fill in your API keys

# Gmail API Credentials
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json

# Google Calendar API Credentials  
CALENDAR_CREDENTIALS_PATH=calendar_credentials.json
CALENDAR_TOKEN_PATH=calendar_token.json

# AI Service API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_PATH=interview_performance.db

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=5000
APP_DEBUG=True

# Timezone Settings
DEFAULT_TIMEZONE=America/New_York

# Email Processing Settings
EMAIL_SCAN_DAYS_BACK=7
MAX_EMAILS_PER_SCAN=50

# Interview Prep Settings
DEFAULT_PREP_DURATION_HOURS=2
PREP_REMINDER_DAYS=1

# Performance Tracking
ENABLE_ANALYTICS=True
CHART_GENERATION=True
