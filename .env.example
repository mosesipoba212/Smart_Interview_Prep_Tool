# ===========================================
# üîê ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ===========================================
# ü§ñ AI SERVICE CONFIGURATION
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# üìß GMAIL API CONFIGURATION
# ===========================================

# Google OAuth Client Credentials
GMAIL_CLIENT_ID=your_google_client_id_here
GMAIL_CLIENT_SECRET=your_google_client_secret_here

# Google API Key for Gmail service
GOOGLE_API_KEY=your_google_api_key_here

# ===========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===========================================

# Database URLs (if using external databases)
DATABASE_URL=sqlite:///interview_performance.db
INTERNSHIP_DB_URL=sqlite:///internship_tracker.db

# ===========================================
# üîë SECURITY CONFIGURATION
# ===========================================

# Flask Secret Key (generate a random string)
SECRET_KEY=your_super_secret_flask_key_here

# Session Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# ===========================================
# üåê APPLICATION CONFIGURATION
# ===========================================

# Application Environment
FLASK_ENV=development
DEBUG=true

# Application URL
APP_URL=http://localhost:5000

# ===========================================
# üìä ANALYTICS CONFIGURATION
# ===========================================

# Analytics tracking (if using external services)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ===========================================
# üìß EMAIL CONFIGURATION
# ===========================================

# SMTP Configuration (for sending emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# ===========================================
# üöÄ DEPLOYMENT CONFIGURATION
# ===========================================

# Production settings
PRODUCTION_URL=https://your-app-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===========================================
# üîí SECURITY NOTES
# ===========================================

# IMPORTANT SECURITY REMINDERS:
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate API keys regularly
# 4. Use different keys for development and production
# 5. Enable 2FA on all accounts that support it
# 6. Monitor API usage and set up billing alerts

